# Maintainer: Andrei Pozolotin <Andrei.Pozolotin@gmail.com>

pkgdesc="Dovecot Antispam Plugin"
url="http://git.sipsolutions.net"
license="Apache"
pkgname="dovecot-antispam"
pkgver=1
pkgrel=1
arch="x86 x86_64"
_artifact_="${pkgname}-${pkgver}"
_query_="?p=dovecot-antispam.git;a=snapshot;h=963c046c19b5d7019c607a8b648cae7b53d93ce2;sf=tgz"
source="${_artifact_}.tar.gz::${url}/${_query_}"
options="!strip"
depends="" 
optdepends=""
makedepends="$depends $optdepends dovecot-dev autoconf automake" 

build() {
    cd "${srcdir}/${_artifact_}"
    #ln -f -s /usr/share/automake-1.15/install-sh install-sh
    
    echo > .config
    echo "DOVECOT=/usr/include/dovecot" >> .config
    echo "INSTALLDIR=/usr/lib/dovecot" >> .config
    
    make
}

package() {
    cd "${srcdir}/${_artifact_}"
    
    make install DESTDIR="$pkgdir"
}
